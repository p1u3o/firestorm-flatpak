{
  "name":"wine",
  "buildsystem":"autotools",
  "build-options":{
    "make-args":[
      "--silent"
    ],
    "arch":{
      "x86_64":{
        "prepend-pkg-config-path":"/app/lib32/pkgconfig:/usr/lib/i386-linux-gnu/pkgconfig",
        "ldflags":"-L/app/lib32",
        "append-path":"/usr/lib/sdk/toolchain-i386/bin",
        "env":{
          "CC":"i686-unknown-linux-gnu-gcc",
          "CXX":"i686-unknown-linux-gnu-g++"
        },
        "libdir":"/app/lib32"
      }
    }
  },
  "config-opts": [
    "--without-vkd3d",
    "--without-xinput",
    "--without-xinput2"
  ],
  "sources":[
    {
      "type":"archive",
      "url":"https://dl.winehq.org/wine/source/4.x/wine-4.17.tar.xz",
      "sha256":"7480a1436687486996ba6cf91fef71b70e6dafffbf2c55ea2430094c1025b2ae"
    },
    {
      "type":"archive",
      "url":"https://github.com/wine-staging/wine-staging/archive/v4.17.tar.gz",
      "sha256":"8c7ec7ca44641930d990286305bcfd6b027566d608ca9e3e9d7accff39d53a39"
    },
    {
      "type":"shell",
      "commands":[
        "./patches/patchinstall.sh DESTDIR=$(pwd) --all"
      ]
    }
  ]
}
