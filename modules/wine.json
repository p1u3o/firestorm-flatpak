{
  "name":"wine",
  "buildsystem":"autotools",
  "build-options":{
    "make-args":[
      "--silent"
    ],
    "arch":{
      "x86_64":{
        "prepend-pkg-config-path":"/app/lib32/pkgconfig:/usr/lib/i386-linux-gnu/pkgconfig",
        "ldflags":"-L/app/lib32",
        "append-path":"/usr/lib/sdk/toolchain-i386/bin",
        "env":{
          "CC":"i686-unknown-linux-gnu-gcc",
          "CXX":"i686-unknown-linux-gnu-g++"
        },
        "libdir":"/app/lib32"
      }
    }
  },
  "config-opts": [
    "--without-vkd3d",
    "--without-xinput",
    "--without-xinput2"
  ],
  "sources":[
    {
      "type":"archive",
      "url":"https://dl.winehq.org/wine/source/4.x/wine-4.16.tar.xz",
      "sha256":"8d7ba7a0643626c0349442577a1f1b06d3062a4129aac0bd5a2b0eb15b5b1d9f"
    },
    {
      "type":"archive",
      "url":"https://github.com/wine-staging/wine-staging/archive/v4.16.tar.gz",
      "sha256":"2de237fa5d9eeb3a67f75e113f392a2b53a67d75f1d1f6304964013c837f93b9"
    },
    {
      "type":"shell",
      "commands":[
        "./patches/patchinstall.sh DESTDIR=$(pwd) --all"
      ]
    }
  ]
}
